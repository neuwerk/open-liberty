<?xml version="1.0" encoding="UTF-8"?>
<application-client xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/application-client_6.xsd"
	version="6">
	<!--
		for web service stuff, see
		http://java.sun.com/xml/ns/javaee/javaee_web_services_client_1_3.xsd
	-->
	<!--
		for the uninitiated, service-ref is declaring a jndi name so that a
		client can do a context lookup on it. That in turn pulls the info out
		of this file. Think of it as a strange form of properties file. ref:
		http://publib.boulder.ibm.com/infocenter/wasinfo/v7r0/index.jsp?topic=/com.ibm.websphere.express.doc/info/exp/ae/twbs_jaxwsclientdd.html

		example of service-ref-type: <service-ref>
		<service-ref-name>service/ExamplePort</service-ref-name>
		<service-interface>com.ibm.sample.ExampleService</service-interface>
		<service-ref-type>com.ibm.sample.ExamplePort</service-ref-type>
		</service-ref>
	-->

	<display-name>assorted_addr_tests</display-name>

	<service-ref>
		<service-ref-name>service/ClientAddrOffDDOff</service-ref-name>
		<service-interface>jaxws22.addressing.server.EchoService</service-interface>
		<service-ref-type>jaxws22.addressing.server.Echo</service-ref-type>
	    <!-- the client configures itself based on the wsdl that it reads.
	         This one contains no addressing. To turn on addressing, you can
	         feed it a different wsdl, like EchoServiceRequiredNonAnon.wsdl.
	     -->
		<wsdl-file>META-INF/wsdl/EchoService.wsdl</wsdl-file>
		<port-component-ref>
			<service-endpoint-interface>jaxws22.addressing.server.Echo</service-endpoint-interface>
			<addressing>
                <enabled>false</enabled>
                <required>false</required>
                <responses>ALL</responses>
            </addressing>		
		</port-component-ref>
	</service-ref>
	
	<service-ref>
		<service-ref-name>service/ClientAddrOffDDOn</service-ref-name>
		<service-interface>jaxws22.addressing.server.EchoService</service-interface>
		<service-ref-type>jaxws22.addressing.server.Echo</service-ref-type>
	    <!-- the client configures itself based on the wsdl that it reads.
	         This one contains no addressing.  --> 
		<wsdl-file>META-INF/wsdl/EchoService.wsdl</wsdl-file>
		<port-component-ref>
			<service-endpoint-interface>jaxws22.addressing.server.Echo</service-endpoint-interface>
			<addressing>
                <enabled>true</enabled>
                <required>true</required>
                <responses>ALL</responses>
            </addressing>		
		</port-component-ref>
	</service-ref>
	
	<service-ref>
		<service-ref-name>service/ClientAddrOnDDOff</service-ref-name>
		<service-interface>jaxws22.addressing.server.EchoService</service-interface>
		<service-ref-type>jaxws22.addressing.server.Echo</service-ref-type>
	 
		<wsdl-file>META-INF/wsdl/EchoService.wsdl</wsdl-file>
		<port-component-ref>
			<service-endpoint-interface>jaxws22.addressing.server.Echo</service-endpoint-interface>
			<addressing>
                <enabled>false</enabled>
                <required>false</required>
                <responses>ALL</responses>
            </addressing>		
		</port-component-ref>
	</service-ref>

	<service-ref>
		<service-ref-name>service/ClientAddrOnDDEnabled</service-ref-name>
		<service-interface>jaxws22.addressing.server.EchoService</service-interface>
		<service-ref-type>jaxws22.addressing.server.Echo</service-ref-type>
	 
		<wsdl-file>META-INF/wsdl/EchoService.wsdl</wsdl-file>
		<port-component-ref>
			<service-endpoint-interface>jaxws22.addressing.server.Echo</service-endpoint-interface>
			<addressing>
                <enabled>true</enabled>
                <required>false</required>
                <responses>ALL</responses>
            </addressing>		
		</port-component-ref>
	</service-ref>
	
	<service-ref>
		<service-ref-name>service/ClientAddrOnImplicitDDOff</service-ref-name>
		<service-interface>jaxws22.addressing.server.EchoService</service-interface>
		<service-ref-type>jaxws22.addressing.server.Echo</service-ref-type>
	 
		<wsdl-file>META-INF/wsdl/EchoService.wsdl</wsdl-file>
		<port-component-ref>
			<service-endpoint-interface>jaxws22.addressing.server.Echo</service-endpoint-interface>
			<addressing>
                <enabled>true</enabled>
                <!-- required off is implicit --> 
            </addressing>		
		</port-component-ref>
	</service-ref>
	
	<!-- no addressing configuration.  Just need this so we can use webserviceref injection and config with annotations -->
	<service-ref>
		<service-ref-name>service/ClientAddrOnNoDD</service-ref-name>
		<service-interface>jaxws22.addressing.server.EchoService</service-interface>
		<service-ref-type>jaxws22.addressing.server.Echo</service-ref-type>
	 
		<wsdl-file>META-INF/wsdl/EchoService.wsdl</wsdl-file>
		<port-component-ref>
			<service-endpoint-interface>jaxws22.addressing.server.Echo</service-endpoint-interface>		
		</port-component-ref>
	</service-ref>	
    <!-- insert more refs here --> 

	
</application-client>
