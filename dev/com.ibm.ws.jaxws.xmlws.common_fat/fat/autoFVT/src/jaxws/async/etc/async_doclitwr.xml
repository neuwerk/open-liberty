<bindings 
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
    wsdlLocation="async_doclitwr.wsdl"
    xmlns="http://java.sun.com/xml/ns/jaxws">    
    <bindings node="wsdl:definitions">
        <package name="jaxws.async.wsfvt.common.doclitwr.client"/>        
        <enableAsyncMapping>true</enableAsyncMapping>
    </bindings>
    
   
    <bindings node="wsdl:definitions/wsdl:portType[@name='AsyncPort']/wsdl:operation[@name='customAsync']">
		<method name="remapped" />
    </bindings>     
     
    <bindings node="wsdl:definitions/wsdl:portType[@name='AsyncPort']/wsdl:operation[@name='another']">
		<method name="anotherAsync" />
    </bindings>        

    <bindings node="wsdl:definitions/wsdl:portType[@name='AsyncPort']/wsdl:operation[@name='isAsleep']">
        <enableAsyncMapping>false</enableAsyncMapping>
    </bindings>   
     
    <bindings node="wsdl:definitions/wsdl:portType[@name='AsyncPort']/wsdl:operation[@name='wakeUp']">
        <enableAsyncMapping>false</enableAsyncMapping>
    </bindings>        
     
</bindings>