<!-- WARNING: The following properties will be dynamically added to the instance.xml
              file by the unittest.bat/sh script.  Do not add these properties to
              this file!
              
              FVT.base
              WAS.base.dir 
              TEST.base.dir
              reportBuild
              ANT.base.dir 
              reportRelease
               
-->     

<!-- This will make the system environment variables available as ant properties.
	 For example, PATH = env.PATH

     ** This tag is needed for HP 64bit. but causing troubles in zOS (because EBCDIC and ASCII)
     ** move this tag to unittest.sh  and set in instance.xml
      <property environment="env" />	 
-->

<!-- when we are using ltpa security, this is the default ldap server and port.
     The "standard" id's on this server are a also used by some roles-based tests.
     chiawang -may- be available as a backup if needed.
 --> 
<property name="ldap.server.dns.suffix" value="austin.ibm.com" />
<property name="ldap.server.shortname" value="newwang" />
<property name="ldap.server.hostname" value="${ldap.server.shortname}.${ldap.server.dns.suffix}" />
<property name="ldap.server.port"     value="389" />

<!-- properties based off ${FVT.base} -->           
<property name="FVT.base.dir" value="${FVT.base}/autoFVT"/>
<property name="JUNIT.base.dir" value="${FVT.base}/autoFVT/common/jars"/>

<!-- properties based off ${FVT.base.dir} -->
<property name="FVT.build.dir" value="${FVT.base.dir}/build"/>
<property name="FVT.build.classes.dir" value="${FVT.build.dir}/classes"/>
<property name="FVT.build.work.dir" value="${FVT.build.dir}/work"/>
<property name="FVT.build.lib.dir" value="${FVT.build.dir}/lib"/>
<property name="FVT.build.javadoc" value="${FVT.build.dir}/javadoc"/>
<property name="FVT.build.installableApps.dir" value="${FVT.build.dir}/installableApps"/>
<property name="FVT.test.reports.dir" value="${FVT.base.dir}/results"/>    
<property name="FVT.logs.dir" value="${FVT.base.dir}/results/junit"/>
<property name="FVT.build.error.log" value="${FVT.logs.dir}/build-error.log"/>
<property name="FVT.install.error.log" value="${FVT.logs.dir}/install-error.log"/>
<property name="FVT.uninstall.error.log" value="${FVT.logs.dir}/uninstall-error.log"/>

<!-- <property name="IHS.base.dir" value="${WAS.base.dir}/ihs"/>-->
<property name="WAS.endorsed.dirs" value="${FVT.base.dir}/common/jars/endorsed"/>

<property name="debug" value="on"/>                                        
<property name="failonerror" value="true"/>                                        
<property name="deprecation" value="true"/>

<property name="javac.fork" value="no"/>
<property name="ant.inheritAll" value="true"/>
<property name="ant.inheritRefs" value="true"/>
<property name="ant.reuse.loader" value="true"/>

<!-- ======================================= -->
<!-- To avoid excessive memory consumption   -->
<!-- due to what appears to be a memory leak -->
<!-- in Ant, these fork values have been set -->
<!-- to yes.  There is a tradeoff between    -->
<!-- memory consumption and time it takes to -->
<!-- run the tests.                          -->
<!-- ======================================= -->

<!-- compile.foreach.fork determines whether the
     harness should fork during the compile task.
 -->
<property name="compile.foreach.fork" value="no"/>

<!-- install.foreach.fork determines whether the
     harness should fork during the install task.
 -->
<property name="install.foreach.fork" value="no"/>

<!-- uninstall.foreach.fork determines whether the
     harness should fork during the uninstall task.
 -->
<property name="uninstall.foreach.fork" value="no"/>

<!-- urun.foreach.fork determines whether the
     harness should fork during the component-run task.
 -->
<property name="run.foreach.fork" value="no"/>

<!-- verbose.foreach.fork determines whether we should
     run with verbose on forked tasks.
-->
<property name="verbose.foreach.fork" value="no"/>                                       
<property name="run.buildtestcase.fork" value="yes"/>                                       
                                       
<!-- failonerror.foreach.fork is used to allow the
     foreach task to determine whether the tests should
     continue building if the one of the individual
     tests fails for some reason.
-->
<property name="failonerror.foreach.fork" value="false"/>

<!-- ext.compile.foreach.fork is used for tests like
     AxisFvt which have many tests under their
     directory structure.
-->
<property name="ext.compile.foreach.fork" value="yes"/>
<!-- ======================================= -->

<!-- The proxy host and port values allow you to run
     a proxy server so that you can see a message
     without having to change your WSDL.  To run
     tcpmon as proxy server, 
     type java com.ibm.ws.webservices.engine.utils.tcpmon <proxy port> .
-->                              
<property name="proxy.host" value="localhost"/>                                              

<!-- The property is the port that the proxy server is listening on
     when the component-run-proxy target in the targets.xml file
     is run.
-->
<property name="proxy.port" value="80"/>        

<!-- The property is the port that the debugger is listening on
     when the component-run-debug target in the targets.xml file
     is run.
-->
<property name="debug.listener.port" value="8888"/> 

<!-- This property determines whether server trace will be enabled.
-->
<property name="server.trace" value="false"/>

<!-- This property is only used if server.trace is set to true.  This
     is the trace string that will be used for server side trace.
-->
<!-- TODO What's the package name for liberty jaxws libraries -->
<property name="server.trace.package.name" value="com.ibm.ws.webservices.*=all=enabled"/>    

<!-- This property determines the client side trace string that will
     be used when the component-run-client-trace target in the targets.xml
     file is run.
-->
<!-- TODO What's the package name for liberty jaxws libraries -->
<property name="client.trace.package.name" value="com.ibm.ws.websvcs.*=all=enabled"/>

<!-- This property is the id used for tests requiring global security
     on the distributed platforms.  Note the id used on z/OS is
     different.
-->                                                  
<property name="dist.security.user.name" value="j2ee"/>

<!-- This property is the password used for tests requiring global
     security on the distributed platforms.  Note the password used
     on z/OS is different.
-->
<property name="dist.security.password"  value="wsj2ee1a"/>

<!-- This property is the id used for tests requiring global
     security on z/OS.
-->
<property name="zos.security.user.name" value="IBMUSER"/>

<!-- This property is the password used for tests requiring global
     security on z/OS.
-->
<property name="zos.security.password" value="IBMUSER"/>    

<!-- This is the user id for ftp'ing the test report back to
     amy.austin.ibm.com.
-->                                                                       
<property name="reportUser" value="tester"/>

<!-- This is the password used for ftp'ing the test report back
     to amy.austin.ibm.com.
-->
<property name="reportPasswd" value="t3st3r"/>

<!-- This property is for the class that controls batch application
     install mode.
-->
<!-- tWAS specific since use jacl scripts -->
<property name="batch.install.mode" value="com.ibm.ws.wsfvt.build.install.BatchInstallImpl"/>                                             
                                             
<!-- This property is for the class that controls batch application
     install mode for z/OS and Unix platforms.  This is necessary 
     because the ulimit -n [# of files] may not be set high enough
     on all test computers.
-->
<!-- tWAS specific since use jacl scripts -->
<property name="hybrid.batch.install.mode" value="com.ibm.ws.wsfvt.build.install.HybridBatchInstallImpl"/>                                             

<!-- This property is for the class that controls real time application
     install mode.
-->                                                                  
<property name="rt.install.mode" value="com.ibm.ws.wsfvt.build.install.RealTimeInstallImpl"/>                                             

<!-- This property is for the class that controls batch application uninstall
     mode.
-->
<!-- tWAS specific since use jacl scripts -->                                                                  
<property name="batch.uninstall.mode" value="com.ibm.ws.wsfvt.build.uninstall.BatchUninstallImpl"/>                                             
                                             
<!-- This property is for the class that controls real time application uninstall
     mode.
-->                                                                                    
<property name="rt.uninstall.mode" value="com.ibm.ws.wsfvt.build.uninstall.RealTimeUninstallImpl"/>                                             
                                                                                    
<!-- This is the property that controls the default application install
     mode.
-->
<!-- Use realtime install mode for liberty -->
<!-- <property name="default.install.mode" value="${hybrid.batch.install.mode}"/> -->
<property name="default.install.mode" value="${rt.install.mode}"/>

<!-- This is the property that controls the default application uninstall
     mode.
-->
<!-- Use realtime uninstall mode for liberty -->
<!-- <property name="uninstall.mode" value="${batch.uninstall.mode}"/> -->
<property name="uninstall.mode" value="${rt.uninstall.mode}"/>

<!-- This property controls in milliseconds how much time can pass before
     a test times out.
-->
<property name="test.timeout" value="600000"/>

<!-- These properties control how wsadmin connects to the server (if at all)
   conn.type=true implies no connection to the server is available (i.e. cold install or server stopped)
-->
<property name="default.conn.type" value="true"/>
<property name="hot.install.conn.type" value="false"/>

<!-- This property will cause the host and ports used in the WSDL and Java
     files to be replaced with the properties defined in this file.
-->                                                     
<property name="use.non.default.ports" value="false"/>
                                             
<!-- This property controls whether the scripts are run to enable security
     using the WIM registry.
-->
<property name="enable.security" value="true"/>

<!-- This property will determine if the test framework will modify
     the server ports to return them to the defaults.  The defaults
     are used when a computer does not have any other WebSphere installs.
     With WAS v6.1, the installer has been changed to automatically detect
     other WebSphere's and bump the ports up so that there aren't any
     conflicts.  Unfortunately, this has caused our tests problems because
     they depend on the default ports being used.
-->
<property name="modify.server.default.ports" value="false"/>

<!-- This property specifies the amount of time that should pass before
     the TimedWASRestart task restarts WAS
-->
<property name="timed.restart.interval" value="14400000"/>

<!-- This is the log to store the timedWASRestart time stamp
-->
<property name="timed.restart.log" value="${FVT.logs.dir}/timedRestart.log"/>

<!-- This property specifies the file to keep track of the session for framework setup
-->
<property name="framework.session.log" value="${FVT.build.work.dir}/framework.session.log"/>


<!-- This property decide the ZOS release name.
     Since we do not want to make all the zOS FVT results listd in 
     ZOSC
-->
<property name="zos.release.name" value="ZPyxis"/>

<!-- These properties decide the heapsize size of JVM of junit 
     The FVT/ws/code/websvcs.fvt/zos/classes/handleProps.class
     will modify these properties to only half-sizes because the limited Z memory resources
-->
<property name="junit.jvm.xms" value="-Xms40m"/>
<property name="junit.jvm.xmx" value="-Xmx256m"/>

<!-- Set this property to true when running on a machine that
     has been configured for kerberos.
-->
<property name="kerberos.enabled" value="false"/>

<!-- tWAS websvcs.fvt required -->
<property name="FVT.base" value="${fvt.top}"/>
<property name="WAS.base.dir" value="${WAS.base.dir}"/>
<property name="TEST.base.dir" value="WSFVT"/>
<property name="reportBuild" value="${build.number}"/>
<property name="ANT.base.dir" value="${ant.home}"/>
<property name="reportRelease" value="${fe.name}"/>

<!-- Add testports.properties to every compilation work -->
<property file="${FVT.base.dir}/testports.properties"/>
