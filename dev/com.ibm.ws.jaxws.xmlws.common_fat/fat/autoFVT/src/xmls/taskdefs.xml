  <property name="ant.reuse.loader" value="true" />
  <taskdef name="taskdef"
           classname="com.ibm.ws.wsfvt.build.tasks.FVTTaskdef"
           loaderRef="fvttaskdef">
    <classpath>
      <pathelement location="${FVT.base.dir}/common/jars/websvcs.fvt.framework.jar"/>
    </classpath>
  </taskdef>

  <taskdef name="wsdl2java" loaderRef="refwsdl2java" 
           classname="com.ibm.ws.webservices.tools.ant.WSDL2JavaFull">
    <classpath refid="wasjaxrpctaskclasspath"/>
  </taskdef>

  <taskdef name="wsdl2javaj2ee" loaderRef="refwsdl2javaj2ee" 
           classname="com.ibm.websphere.ant.tasks.WSDL2Java">
    <classpath refid="wasjaxrpctaskclasspath"/>
  </taskdef>

  <taskdef name="wsdl2javafull" loaderRef="refwsdl2javafull" 
           classname="com.ibm.ws.webservices.tools.ant.WSDL2JavaFull">
    <classpath refid="wasjaxrpctaskclasspath"/>
  </taskdef>

  <taskdef name="java2wsdl" loaderRef="refjava2wsdl" 
           classname="com.ibm.websphere.ant.tasks.Java2WSDL">
    <classpath refid="wasjaxrpctaskclasspath"/>
  </taskdef>
  
  <taskdef name="endpointenable" loaderRef="refendpointenable" 
           classname="com.ibm.ws.webservices.tools.ant.EndpointEnabler">
    <classpath refid="endpointEnablerClasspath"/>
  </taskdef>
  
  <taskdef name="wsdeploy" loaderRef="refwsdeploy" 
           classname="com.ibm.ws.webservices.tools.ant.WSDeploy">
    <classpath refid="endpointEnablerClasspath"/>
  </taskdef>
  
  <taskdef name="wsgen" loaderRef="refwsgen"  classname="com.sun.tools.ws.ant.WsGen">
      <classpath refid="libertytaskclasspath"/>
  </taskdef>  
  
  <!-- com.ibm.ws.jaxws.tools.ant.WsImportTask -->
  <taskdef name="wsimport" loaderRef="refwsimport"  classname="com.sun.tools.ws.ant.WsImport">
       <classpath refid="libertytaskclasspath" />
  </taskdef>
  
  <!-- com.ibm.ws.jaxws.tools.ant.WsImportTask -->
  <taskdef name="libertywsimport" loaderRef="refwsimport"  classname="com.ibm.ws.jaxws.tools.ant.WsImportTask">
       <classpath refid="libertytaskclasspath" />
  </taskdef>		  

  <taskdef name="xjc" loaderRef="refxjc" 
           classname="com.sun.tools.xjc.XJCTask">
    <classpath refid="libertytaskclasspath"/>
  </taskdef>
  
  <taskdef name="libertyxjc" loaderRef="refxjc" 
           classname="com.ibm.ws.jaxb.tools.ant.XJCTask">
    <classpath refid="libertytaskclasspath"/>
  </taskdef>

  <taskdef name="setenvtask" loaderRef="refsetenvtask" 
           classname="com.ibm.ws.wsfvt.build.tasks.SetEnvTask">
    <classpath>
      <pathelement location="${FVT.base.dir}/common/jars/setenvtask.jar"/>
    </classpath>
  </taskdef>  
