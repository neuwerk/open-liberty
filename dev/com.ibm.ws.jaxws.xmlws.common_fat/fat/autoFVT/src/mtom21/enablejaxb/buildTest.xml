<project name="build" default="buildall" basedir=".">

     
  <!-- These are XML entity refs.  Basically these statements cause the
       files declared in the DOCTYPE at the top of the file to be imported
       into this build file.
  -->   
  &instance;
  &properties;
  &paths;
  &targets;
  &taskdefs;
  &taskdefs_post_compile;
  
     
  <!-- This property should match the package name of the test class.  The
       property is used in the targets.xml file when running any of the
       component-run* targets for running a single test case class.
  -->                     
  <property name="componentName" value="mtom21/enablejaxb/wsfvt/test"/>
  
     
  <!-- This path id is used in the targets.xml file when running any of
       the component-run* targets.  This allows setting the classpath 
       for an individual test.
  -->
  <path id="componentClasspath">
    <path refid="thinclientclasspath"/>
    <dirset dir="${FVT.build.classes.dir}">
       <include name="mtom21/enablejaxb/wsfvt/client"/>            
    </dirset>
  </path>
    
  <!-- This path id is to include classpath & classes produced by wsimport tool -->    
  <path id="orgclasspath">
     <path refid="classpath"/>
     <dirset dir="${FVT.build.classes.dir}">
         <include name="mtom21/enablejaxb/wsfvt/server"/>
     </dirset>           
  </path>
 
     
  <!-- The init target will initialize any directories, properties, etc.
       that are needed for the test.
  -->    
  <target name="init" depends="setenv">
    <antcall target="component-init"/>
    <mkdir dir="${FVT.build.work.dir}/mtom21/enablejaxb"/>
    <mkdir dir="${FVT.build.work.dir}/mtom21/enablejaxb/wsfvt/server"/>
    <mkdir dir="${FVT.build.work.dir}/mtom21/enablejaxb/wsfvt/client"/>
    <mkdir dir="${FVT.build.classes.dir}"/>
  </target>                       
  
     
  <!-- The clean target will clean any files, classes, or directories
       so that a new copy of the test can be built and run.
  -->                       
  <target name="clean" depends="setenv">
    <delete dir="${FVT.build.classes.dir}/mtom21/enablejaxb" quiet="true"/>
    <delete quiet="true">
      <fileset dir="${FVT.build.classes.dir}/org/test/mtom21" includes="EnableJAXB*/*"/>
    </delete>
    
    <delete dir="${FVT.build.work.dir}/mtom21/enablejaxb" quiet="true"/>
    <delete file="${FVT.build.lib.dir}/EnableJAXB21.war" quiet="true"/>
    <delete file="${FVT.build.installableApps.dir}/EnableJAXB21.ear" quiet="true"/>
  </target>
                                                    
  <!-- The buildall target will execute all of the targets necessary
       before installing the test into WebSphere.
  -->                                                                                      
  <target name="buildall" depends="setenv, clean, init, server, client, test, preinstall"/> 
  
             
  <!-- The server target will build anything necessary for the server
       piece of the test.  Typically this target builds the server side
       EAR.
  -->                               
  <target name="server" depends="setenv">

    <echo message="Running wsimport"/>
    
    <!-- wsimport for mime type = image/jpeg for EnableJAXBImageJpegService -->    
    <wsimport                 
         wsdl="${FVT.base.dir}/src/mtom21/enablejaxb/etc/wsdl/EnableJAXBImageJpeg.wsdl"            
         destdir="${FVT.build.classes.dir}"    
         sourcedestdir="${FVT.build.work.dir}/mtom21/enablejaxb/wsfvt/server"   
         verbose="true"                           
         package="org.test.mtom21.enablejaxb_imagejpeg">
    </wsimport>
             
    <wsimport                 
         wsdl="${FVT.base.dir}/src/mtom21/enablejaxb/etc/wsdl/EnableJAXBImageJpegHex.wsdl"            
         destdir="${FVT.build.classes.dir}"    
         sourcedestdir="${FVT.build.work.dir}/mtom21/enablejaxb/wsfvt/server"   
         verbose="true"                           
         package="org.test.mtom21.enablejaxb_imagejpeghex">
    </wsimport>
   
    <!-- wsimport for mime type = text/plain for EnableJAXBTextPlainService -->    
    <wsimport                 
         wsdl="${FVT.base.dir}/src/mtom21/enablejaxb/etc/wsdl/EnableJAXBTextPlain.wsdl"            
         destdir="${FVT.build.classes.dir}"
         sourcedestdir="${FVT.build.work.dir}/mtom21/enablejaxb/wsfvt/server"                                  
         verbose="true" 
         package="org.test.mtom21.enablejaxb_textplain">
    </wsimport>

    <!-- wsimport for mime type = image/jpeg for EnableJAXBProxyImageJpegService -->    
    <wsimport                 
         wsdl="${FVT.base.dir}/src/mtom21/enablejaxb/etc/wsdl/EnableJAXBProxyImageJpeg.wsdl"            
         destdir="${FVT.build.classes.dir}"    
         sourcedestdir="${FVT.build.work.dir}/mtom21/enablejaxb/wsfvt/server"                             
         verbose="true" 
         package="org.test.mtom21.enablejaxbproxy_imagejpeg">
    </wsimport>

    <!-- wsimport for mime type = multipart/* for EnableJAXBProxyDataHandlerService -->    
    <wsimport                 
         wsdl="${FVT.base.dir}/src/mtom21/enablejaxb/etc/wsdl/EnableJAXBProxyDataHandler.wsdl"            
         destdir="${FVT.build.classes.dir}"    
         sourcedestdir="${FVT.build.work.dir}/mtom21/enablejaxb/wsfvt/server"                             
         verbose="true" 
         package="org.test.mtom21.enablejaxbproxy_datahandler">
    </wsimport>

    <javac compiler="modern" srcdir="${FVT.base.dir}/src/mtom21/enablejaxb"
           destdir="${FVT.build.classes.dir}"
           deprecation="${deprecation}"
           debug="${debug}"
           source="${build.tests.with.java.level}"
           target="${build.tests.with.java.level}"
           failonerror="${failonerror}">
      <classpath refid="classpath"/>  
      <include name="**/server/*.java"/>
      <exclude name="**/server/org/**/*.java"/>
    </javac>
      
    <war warfile="${FVT.build.lib.dir}/EnableJAXB21.war"
         webxml="${FVT.base.dir}/src/mtom21/enablejaxb/etc/dd/web.xml">
      
     <!--     
      <webinf dir="${FVT.base.dir}/src/mtom21/enablejaxb/etc/dd">
        <exclude name="web.xml"/>
        <include name="ibmservices.xml"/>
      </webinf>
      -->
      
      <webinf dir="${FVT.base.dir}/src/mtom21/enablejaxb/etc">
        <include name="wsdl/*.wsdl"/>
        <include name="wsdl/*.xsd"/> 
    </webinf>

      <classes dir="${FVT.build.classes.dir}">
        <include name="mtom21/enablejaxb/wsfvt/server/**/*.class"/>
        <include name="org/test/mtom21/enablejaxb*/*.class"/>
        <exclude name="org/test/mtom21/enablejaxb*/*Service.class"/>

        
      </classes>
    </war>
    
    <ear earfile="${FVT.build.installableApps.dir}/EnableJAXB21.ear" 
         appxml="${FVT.base.dir}/src/mtom21/enablejaxb/etc/dd/application.xml">
      <fileset dir="${FVT.build.lib.dir}" includes="EnableJAXB21.war"/>
    </ear>
    
  </target>
    
               
  <!-- The client target will build anything necessary for the client
       piece of the test.  This could just be compiling the client class
       or in the case of a managed client, building a client side EAR
       file.
  -->                               
  <target name="client" depends="setenv">
 
     <echo message="Running wsimport"/>

    <!-- wsimport for mime type = image/jpeg for EnableJAXBImageJpegService -->    
    <wsimport                 
         wsdl="${FVT.base.dir}/src/mtom21/enablejaxb/etc/wsdl/EnableJAXBImageJpeg.wsdl"            
         destdir="${FVT.build.classes.dir}" 
         package="org.test.mtom21.enablejaxb_imagejpeg">
    </wsimport>
   

    <wsimport                 
         wsdl="${FVT.base.dir}/src/mtom21/enablejaxb/etc/wsdl/EnableJAXBImageJpegHex.wsdl"            
         destdir="${FVT.build.classes.dir}" 
         package="org.test.mtom21.enablejaxb_imagejpeghex">
    </wsimport>
    
    <!-- wsimport for mime type = text/plain for EnableJAXBTextPlainService -->    
    <wsimport                 
         wsdl="${FVT.base.dir}/src/mtom21/enablejaxb/etc/wsdl/EnableJAXBTextPlain.wsdl"            
         destdir="${FVT.build.classes.dir}"
         package="org.test.mtom21.enablejaxb_textplain">
    </wsimport>

 
    <!-- wsimport for mime type = image/jpeg for EnableJAXBProxyImageJpegService -->    
    <wsimport                 
         wsdl="${FVT.base.dir}/src/mtom21/enablejaxb/etc/wsdl/EnableJAXBProxyImageJpeg.wsdl"            
         destdir="${FVT.build.classes.dir}"    
         package="org.test.mtom21.enablejaxbproxy_imagejpeg">
    </wsimport>

    <!-- wsimport for mime type = multipart/* for EnableJAXBProxyDataHandlerService  -->    
    <wsimport                 
         wsdl="${FVT.base.dir}/src/mtom21/enablejaxb/etc/wsdl/EnableJAXBProxyDataHandler.wsdl"            
         destdir="${FVT.build.classes.dir}"    
         package="org.test.mtom21.enablejaxbproxy_datahandler">
    </wsimport>

    <!-- read Cell config -->
    <readCellConfig prefix="server1" key="defaultServer" verbose="false"/>

    <!-- <mkdir dir="${FVT.build.work.dir}/mtom21/enablejaxb/wsfvt/client"/>  -->
    <copy todir="${FVT.build.work.dir}/mtom21/enablejaxb/wsfvt/client" overwrite="yes">
      <fileset dir="${FVT.base.dir}/src/mtom21/enablejaxb/wsfvt/client">
        <include name="*.java"/>
      </fileset>
      
      <filterset id="replace.filter.set1">
        <filter token="REPLACE_WITH_HOST_NAME" value="${server1.hostName}"/>
        <filter token="REPLACE_WITH_PORT_NUM"  value="${server1.WC_defaulthost}"/>
      </filterset>
    </copy>

    <!-- copy resource (xml, image, etc) files -->       
    <copy todir="${FVT.build.classes.dir}" overwrite="yes">
      <fileset dir="${FVT.base.dir}/src/mtom21/enablejaxb/wsfvt/client">
         <include name="*.xml"/> 
         <include name="*.jpeg"/>  
         <include name="*.gif"/> 
         <include name="*.txt"/> 
         <include name="*.xsd"/>
      </fileset>

     </copy>
    <!-- 
    <javac compiler="modern" srcdir="${FVT.build.work.dir}/mtom21/enablejaxb"
           destdir="${FVT.build.classes.dir}"
           deprecation="${deprecation}"
           debug="${debug}"
           source="${build.tests.with.java.level}"
           target="${build.tests.with.java.level}"
           failonerror="${failonerror}">
      <classpath refid="xjcClientClasspath"/>  
      <include name="**/client/org/*.java"/>
    </javac>
    -->
    
      
    <javac compiler="modern" srcdir="${FVT.build.work.dir}/mtom21/enablejaxb"
           destdir="${FVT.build.classes.dir}"
           deprecation="${deprecation}"
           debug="${debug}"
           source="${build.tests.with.java.level}"
           target="${build.tests.with.java.level}"
           failonerror="${failonerror}">
      <classpath refid="classpath"/>  
      <include name="**/client/*.java"/>
      <exclude name="**/client/org/**/*.java"/>

    </javac>
      
  </target>
                            
                            
  <!-- The client target will build anything necessary for the test
       piece of the test.  Often this will just include compiling the
       the JUnit test case file.
  -->                               
  <target name="test" depends="setenv, client">
  
    <javac compiler="modern" srcdir="${FVT.base.dir}/src/mtom21/enablejaxb"
           destdir="${FVT.build.classes.dir}"
           deprecation="${deprecation}"
           debug="${debug}"
           source="${build.tests.with.java.level}"
           target="${build.tests.with.java.level}"
           failonerror="${failonerror}">
      <classpath refid="classpath"/>
      <include name="**/test/*.java"/>
    </javac>
      
  </target>         
  
             
  <!-- The preinstall target will perform any tasks necessary before the
       application is installed into WebSphere.  This could include running
       ejbdeploy or endptenabler for an EAR that contains an EJB.
  -->                               
  <target name="preinstall" depends="setenv">
  </target>         
  
  
  <!-- The install target will install the server side piece of the test
       into WebSphere.  This target calls the installTest.xml file for
       the test.
  -->           
  <target name="install" depends="setenv">
    <ant antfile="${FVT.base.dir}/src/mtom21/enablejaxb/installTest.xml"
         dir="${FVT.base.dir}/src/mtom21/enablejaxb">
      <property name="install.mode" value="${rt.install.mode}"/>
    </ant>
  </target>
  
    
  <!-- The uninstall target will uninstall the server side piece of the test
       from WebSphere.  This target calls the uninstallTest.xml file for
       the test.
  -->           
  <target name="uninstall" depends="setenv">
    <ant antfile="${FVT.base.dir}/src/mtom21/enablejaxb/uninstallTest.xml"
         dir="${FVT.base.dir}/src/mtom21/enablejaxb">
      <property name="uninstall.mode" value="${rt.uninstall.mode}"/>
    </ant>
  </target>
 
</project>
