<?xml version="1.0"?>
<project default="unzip_websvcs_zip" basedir=".">

    <!-- websvcs_zip, fvttop, and profileDir are passed in as a JVM arg since we can't assume these locations -->
    <property name="fvtHome" value="${fvttop}/FVT/ws/code/websvcs.fvt"/>
    <property name="results_zip" value="${fvtHome}/results.zip"/>

    <target name="unzip_websvcs_zip">
        <unzip src="${websvcs_zip}"
               dest="${profileDir}"
               overwrite="true"/>
    </target>

    <target name="zip_results">
        <zip destfile="${results_zip}"
             basedir="${fvtHome}"
             update="true"
             includes="results/**"/>
    </target>

    <target name="get_java_home">
        <echo message="JAVA_HOME=${java.home}"/>
    </target>

</project>
